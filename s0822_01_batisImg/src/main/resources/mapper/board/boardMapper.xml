<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.site.dao.BoardMapper">
  
  <!-- 회원리스트  -->
  <select id="findAll" resultType="com.site.dto.Board">
    select * from board
  </select> 
  
  <!-- 회원상세보기  -->
  <select id="findByBno" resultType="com.site.dto.Member">
    select * from board where bno=#{bno}
  </select>
  
  <!-- 게시글 저장  -->
  <insert id="save">
    insert into board values (
    	board_seq.nextval,#{btitle}, #{bcontent}, #{id},
    	board_seq.currval,0,0,0,sysdate
    )
  </insert> 
</mapper>